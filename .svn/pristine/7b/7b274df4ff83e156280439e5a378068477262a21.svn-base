function ShapeClick() {
        $("#loading").fadeIn();
        $.ajax({
            url: '@Url.Action("PULA_Details", "PULA")',
            type: 'GET',
            data: { shapeId: 3, date: '@DateTime.Now' },
            success: function (response) {
                $("#loading").fadeOut();
                $("#content").html(response);
            },
            error: function (xhr) {
                alert("PULA Details didn't come back");
            }
        });
    }

    $(function () {
