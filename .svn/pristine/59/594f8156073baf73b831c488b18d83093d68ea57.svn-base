                    using (BLTRDSEntities aBLTE = GetRDS(securedPassword))
                    {
                        anAILimit = GetEntities<AI_LIMITATIONS>(aBLTE).SingleOrDefault(ai => ai.AI_LIMITATION_ID == entityID);

