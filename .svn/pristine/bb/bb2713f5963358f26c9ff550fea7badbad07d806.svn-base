        [WiMRequiresRole(new string[] { AdminRole, PublisherRole })]
        [HttpOperation(HttpMethod.POST,ForUriName="Edit")]
        public OperationResult Edit(Int32 entityID, ACTIVE_INGREDIENT anEntity, [Optional] string date)
