	                <div class="ui-block-b"><input type="text" class="bltTextInput ui-shadow-inset" name="Publisher.ORGANIZATION_NAME" data-mini="true" value="@(ViewData.ContainsKey("publisherOrg") ? ViewData["publisherOrg"] : "")" /></div>
