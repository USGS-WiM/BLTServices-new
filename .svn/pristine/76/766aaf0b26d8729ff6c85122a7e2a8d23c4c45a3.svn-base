    function GetFilteredShapes(date, AI_value, prod_value) {
        var aDate = date != "" ? date.toString() : "0";
        $.ajax({
            url: '@Url.Action("GetFilteredSimplePULAs", "PULA")',
            type: 'GET',
            data: { fDate: aDate, aiID: AI_value, productID: prod_value },
