            //No editing of tables are allowed. An edit call will create and activate a new entity, and expire the old one
            USER_ loggedInUser;
            MODIFIER aModifier;
            try
            {
                DateTime? thisDate = ValidDate(date);
                if (!thisDate.HasValue)
